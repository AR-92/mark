    clear_with_header "Configuration"
    
    # Description
    gum style \
        --foreground $SOLARIZED_BASE1 \
        "Manage your mark tool configuration:"
    echo ""
    
    # Menu
    choice=$(gum choose \
        --cursor="â–¶ " \
        --selected="â—‰ " \
        --height=7 \
        "ðŸ“‹ List All Settings" \
        "âœï¸  Set Configuration Value" \
        "ðŸ” Get Configuration Value" \
        "ðŸ”„ Reset to Defaults" \
        "â¬…ï¸  Back to Main Menu")
    
    case "$choice" in
        "ðŸ“‹ List All Settings")
            list_config_tui
            ;;
        "âœï¸  Set Configuration Value")
            set_config_tui
            ;;
        "ðŸ” Get Configuration Value")
            get_config_tui
            ;;
        "ðŸ”„ Reset to Defaults")
            reset_config_tui
            ;;
        "â¬…ï¸  Back to Main Menu"| "")
            show_dashboard
            ;;
    esac
}

