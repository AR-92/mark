    clear_with_header "Help & Documentation"
    
    # Description
    gum style \
        --foreground $SOLARIZED_BASE1 \
        "Access documentation and information about mark:"
    echo ""
    
    # Menu
    choice=$(gum choose \
        --cursor="â–¶ " \
        --selected="â—‰ " \
